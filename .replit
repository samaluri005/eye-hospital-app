modules = ["nodejs-18", "dotnet-7.0", "bash", "python-3.12", "dotnet-8.0", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "twilio_send_message:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["azure-cli", "bash", "curl", "git", "gnumake", "python3", "sqlite"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Patient Portal"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auth Service"

[[workflows.workflow]]
name = "Patient Portal"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/patient-portal-web && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Auth Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd temp-auth-service && node server.js"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 41815
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm", "dev:patient-portal"]
build = ["pnpm", "build"]
