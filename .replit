modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["curl", "git", "bash", "python3", "gnumake", "sqlite", "azure-cli"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Monorepo Dev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hospital Development"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ngrok Public Tunnel"

[[workflows.workflow]]
name = "Monorepo Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm -w turbo run dev --output-logs=full"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Hospital Development"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm -w turbo run dev --output-logs=full"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "ngrok Public Tunnel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./ngrok http 5000 --log=stdout"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start:patient-portal"]
build = ["npm", "run", "build"]
